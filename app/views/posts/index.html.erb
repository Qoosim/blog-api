<div class="container">
  <div class="row">
    <div class="col-lg-6 connect">
      <h1>Stay Connected</h1>
    </div>
    
    <div class="col-lg-6 share">
      <h2>Hey <%= current_user.name %>, write to share your thought</h2>
      <%= form_for(@post) do |form| %>
        <%= form.label :content, 'body', class: 'b-content' %>
        <%= form.text_field :content, id: :post_content, class: 'form-control', placeholder: 'Add New Post' %>
        <% if @post.errors.full_messages.any? %>
          <p class="errors">
            <%= "Post could not be saved. #{@post.errors.full_messages.join('. ')}" %>
          </p>
        <% end %>
        <%= form.submit 'Post', class: 'btn btn-primary save-btn' %>
      <% end %>
    </div>
  </div>
  
  <article class="timeline">
    <h3>
      Recent posts
    </h3>
    <ul class="posts">
      <%= render @timeline_posts %>
    </ul>
  </article>
</div>